<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="snt_client_action" model="ir.actions.act_window">
    <field name="name">Client</field>
    <field name="res_model">snt.client</field>
    <field name="view_mode">tree,form</field>
</record>
    <record id="snt_client_form" model="ir.ui.view">
        <field name="name">snt.client.form</field>
        <field name="model">snt.client</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                    
                        <page string="Books">
                            <field name="book_ids"/>
                        </page>
                        
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="snt_client_tree" model="ir.ui.view">
        <field name="name">snt.client.tree</field>
        <field name="model">snt.client</field>
        <field name="arch" type="xml">
            <tree string="Clients">
                <field name="name"/>
                <field name="out_standing_balance"/>
            </tree>
        </field>
    </record>

  
